<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.touch.FeedActivity">

    <TextView
        android:id="@+id/feed_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#000"
        android:padding="4dp"
        android:text="@string/feed_intro"/>

    <ImageView
        android:id="@+id/feed_tomato"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/feed_intro"
        android:contentDescription="@string/tomato_image"
        android:src="@drawable/tomato" />

    <ImageView
        android:id="@+id/feed_monster"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/monster_image"
        android:src="@drawable/monster_left" />

</RelativeLayout>